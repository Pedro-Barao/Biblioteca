<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="550.0" prefWidth="750.0"
            style="-fx-background-color: #AFEEEE;" xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="biblioteca.FXMLEmprestimosController">
    <children>

        <Text layoutX="30.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gerenciamento de Empréstimos">
            <font>
                <Font size="24.0"/>
            </font>
        </Text>
        <Button fx:id="voltarBtn" layoutX="680.0" layoutY="25.0" onAction="#voltar"
                style="-fx-background-color: #000000; -fx-background-radius: 10;" text="&lt;" textFill="WHITE">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>

        <GridPane layoutX="30.0" layoutY="69.0" prefHeight="130.0" prefWidth="690.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="90.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="250.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="230.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CPF:"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ISBN:" GridPane.rowIndex="1"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Data Retirada:" GridPane.rowIndex="2"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Previsão Devolução:" GridPane.columnIndex="2"
                      GridPane.rowIndex="2"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Status:" GridPane.columnIndex="2"
                      GridPane.rowIndex="3"/>

                <TextField fx:id="cpfField" promptText="CPF do Usuário" GridPane.columnIndex="1"/>
                <TextField fx:id="isbnField" promptText="Código ISBN do Livro" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                <DatePicker fx:id="retiradaPicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label fx:id="devolucaoLabel" text="[Calculado automaticamente]" GridPane.columnIndex="3"
                       GridPane.rowIndex="2"/>
                <Label fx:id="statusLabel" text="Selecione um empréstimo para ver o status" GridPane.columnIndex="3"
                       GridPane.rowIndex="3"/>
            </children>
        </GridPane>

        <TableView fx:id="tabela" layoutX="30.0" layoutY="210.0" prefHeight="250.0" prefWidth="690.0">
            <columns>
                <TableColumn fx:id="colCpf" prefWidth="100.0" text="CPF"/>
                <TableColumn fx:id="colNome" prefWidth="150.0" text="Nome do Usuário"/>
                <TableColumn fx:id="colIsbn" prefWidth="130.0" text="ISBN"/>
                <TableColumn fx:id="colRetirada" prefWidth="110.0" text="Retirada"/>
                <TableColumn fx:id="colDevolucao" prefWidth="110.0" text="Devolução"/>
                <TableColumn fx:id="colDevolvido" prefWidth="90.0" text="Devolvido?"/>
            </columns>
        </TableView>

        <GridPane layoutX="30.0" layoutY="480.0" prefHeight="41.0" prefWidth="690.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button onAction="#cadastrar" prefHeight="40.0" prefWidth="160.0"
                        style="-fx-background-radius: 5; -fx-background-color: #98bf64;" text="Cadastrar"/>

                <Button onAction="#pesquisar" prefHeight="40.0" prefWidth="160.0"
                        style="-fx-background-radius: 5; -fx-background-color: #ffffff;" text="Pesquisar"
                        GridPane.columnIndex="1"/>

                <Button onAction="#alterar" prefHeight="40.0" prefWidth="160.0"
                        style="-fx-background-radius: 5; -fx-background-color: #ffc300;" text="Alterar"
                        GridPane.columnIndex="2"/>

                <Button onAction="#salvar" prefHeight="40.0" prefWidth="160.0"
                        style="-fx-background-color: #ce2529; -fx-background-radius: 5;" text="Salvar Dados"
                        textFill="WHITE" GridPane.columnIndex="3"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>